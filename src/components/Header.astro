import Heart from "./icons/Heart.astro";
---

<nav class="p-4 flex items-center justify-between bg-white">
  <a href="">
    <div class="flex items-center ms-3">
      <JDM />
    </div>
  </a>

  <div
    class="flex items-center justify-between gap-8 text-lg font-mono text-slate-800 font-bold"
  >
    <a href="#" class="hover:text-[#00a551] hover:ease-out duration-500">Docs</a
    >
    <a href="#" class="hover:text-[#00a551] hover:ease-out duration-500"
      >About</a
    >
